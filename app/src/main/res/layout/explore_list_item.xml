<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/avatar_image_view"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ededed"
                    android:layout_marginRight="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0">

                    <TextView
                        android:text="Chirrut"
                        android:layout_width="match_parent"
                        android:id="@+id/username_text_view"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="I'm one with the force."
                        android:layout_width="match_parent"
                        android:id="@+id/bio_text_view"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0">
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:id="@+id/explore_posts_layout"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/pic1_image_view"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/pic2_image_view"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/pic3_image_view"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp"
                    android:layout_margin="8dp" />

            </LinearLayout>





        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>